{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015",
      "es5"
    ],
    "outDir": "./build/compiled",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "pretty": true,
    // "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "typeRoots": [
      // "./typings/modules",
      "./node_modules/@types"

    ]
  },
  "exclude": [
    "archive",
    "build",
    "dist",
    "node_modules",
    "*/node_modules",
    "tmp"
  ],
  "compileOnSave": true
}
